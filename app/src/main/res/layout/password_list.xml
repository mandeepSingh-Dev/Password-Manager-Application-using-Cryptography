<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/alphabet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="M"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif-thin"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:enabled="false"
        android:background="#093467"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="Google title"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/alphabet"
        app:layout_constraintTop_toTopOf="@id/alphabet"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:text="username"
        android:textSize="14sp"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/alphabet"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/divisorView"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="@id/alphabet"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:background="#F1E2E2"
        android:layout_marginTop="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>